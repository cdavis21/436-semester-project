<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.worldstars.semesterproject436.DetailActivity" 
    android:background="#FFF5A5">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
              android:layout_alignParentTop="true"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:paddingLeft="100dp"
        android:bottom="1dp"
        android:right="1dp"
        android:orientation="vertical" 
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
          
          
       <TextView
            android:id="@+id/NameLabel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/name_label"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/NameView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@android:color/black" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/CostLabel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/cost_label"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/CostView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@android:color/black" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/CategoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/category_label"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/CategoryView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@android:color/black" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/SubcategoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/subcategory_label"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/SubcategoryView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@android:color/black" >
        </TextView>
    </LinearLayout>
    </LinearLayout>

   <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="110dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/BrazilLabel"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:paddingRight="5dp"
                    android:text="@string/country_4"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/brazilflag"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/BrazilView"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/ChinaLabel"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:paddingRight="5dp"
                    android:text="@string/country_1"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/chinaflag" />

                <TextView
                    android:id="@+id/ChinaView"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/IndiaLabel"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:paddingRight="5dp"
                    android:text="@string/country_3"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/indiaflag" />

                <TextView
                    android:id="@+id/IndiaView"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/IndonesiaLabel"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:paddingRight="5dp"
                    android:text="@string/country_2"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/indonesiaflag" />

                <TextView
                    android:id="@+id/IndonesiaView"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/PakistanLabel"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:paddingRight="5dp"
                    android:text="@string/country_5"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/pakistanflag" />

                <TextView
                    android:id="@+id/PakistanView"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>